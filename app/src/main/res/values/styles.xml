<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/blue_bt_bg</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:paddingVertical">@dimen/_3sdp</item>

    </style>

    <style name="Theme_Dialog_FullScreen" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

   <style name="ButtonStyleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/blue_bt_bg</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:paddingVertical">@dimen/_6sdp</item>
    </style>

    <style name="OutlineButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/gray_outlined_rec</item>
        <item name="android:elevation">@dimen/_4sdp</item>
        <item name="android:paddingVertical">@dimen/_6sdp</item>
    </style>
    <style name="WhiteButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">@dimen/_4sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/black_border_white_bt</item>
        <item name="android:paddingVertical">@dimen/_6sdp</item>
    </style>
    <style name="HeadingTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="BottomNavActiveTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/app_color</item>
    </style>

    <style name="CornerCut" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">10%</item>
        <item name="cornerSizeTopRight">10%</item>
        <item name="cornerSizeBottomLeft">10%</item>
        <item name="cornerSizeBottomRight">10%</item>
    </style>

    <style name="Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:paddingHorizontal">@dimen/_10sdp</item>
        <item name="android:paddingVertical">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColorHint">@color/black_30</item>
        <item name="android:background">@drawable/bg_edit_text_border</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>